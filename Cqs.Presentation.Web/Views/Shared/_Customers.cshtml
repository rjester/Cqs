@model IEnumerable<Cqs.Infrastructure.Dto.CustomerDto>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Create order</th>
            <th>View historic orders</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var customerViewModel in Model)
        {
            <tr>
                <td>@customerViewModel.FirstName</td>
                <td>@customerViewModel.LastName</td>

                <td>
                    @Html.ActionLink("Create order", "Add", "Order", new { customerId = customerViewModel.Id, customerName = customerViewModel.FirstName + " " + customerViewModel.LastName }, null)
                </td>
                <td>
                    @Html.ActionLink("View historic orders", "Get", "Order", new { customerId = customerViewModel.Id, customerName = customerViewModel.FirstName + " " + customerViewModel.LastName }, null)
                </td>
            </tr>
        }
    </tbody>
</table>

